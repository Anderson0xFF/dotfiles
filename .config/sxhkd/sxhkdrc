#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
#super + d
#	sh $HOME/.config/rofi/launcher.sh

#super + n
#	sh ~/.config/rofi/network.sh

super + {d,r,p}
	sh $HOME/.config/rofi/bin/{launcher,runner,powermenu}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


# Brighness Monitor
XF86MonBrightnessUp
	macbook-lighter-screen -i 25

XF86MonBrightnessDown
	macbook-lighter-screen -d 25

XF86KbdBrightnessUp
	keyboard-backlight --up

XF86KbdBrightnessDown
	keyboard-backlight --down

Print
	sh $HOME/.config/rofi/bin/screenshot

# Volume Up
XF86AudioRaiseVolume
#	amixer set Master 5%+
	pactl set-sink-volume @DEFAULT_SINK@ +5%

# Volume Down
XF86AudioLowerVolume
#	amixer set Master 5%-
	pactl set-sink-volume @DEFAULT_SINK@ -5%

# Volume Mute
XF86AudioMute
#	amixer set Master toggle
	pactl set-sink-mute @DEFAULT_SINK@ toggle

#
# ====================== bspwm hotkeys ======================
#


# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

#
# ====================== state/flags ======================
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# close and kill
super + {q,k}
	bspc node -{c,k}



#
# ====================== focus/swap ======================
#

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus prev and next desktop
super + alt + {Left,Right}
    bspc desktop -f {prev,next}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

